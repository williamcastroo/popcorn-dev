.favorite-list
	height: 100%
	width: calc(100% - 5px)
	fixed: top left
	text-align: center
	scrollable()

	&::-webkit-scrollbar-track
		margin-top: HeaderHeight

	.bookmarks
		padding-top: HeaderHeight
		-webkit-user-select: none;
		text-align: left
		display: flex
		flex-direction: row
		flex-wrap: wrap
		justify-content: space-between
		align-content: flex-start
		align-items: flex-start
		width: calc(100% - 5px)
		
		& > div
			margin: 0 auto

		.movie-item
			width: 134px
			&:empty
				height: 0
				margin: 0 10px

	.error
		font-size: 1.5em;
		text-align: center;
		color: #727272;
		font-weight: bold;
		margin: 180px auto;

	> .spinner
		position: absolute;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.5) center center no-repeat;
		//opacity: .5;

		.loading-container
			margin: 180px auto 0px
			opacity: .8;

.bookmark-item
	display:inline-block;
	padding: 10px
	height: 241px;
	font-size: 0.8em

	.cover
		background-size: 134px 196px
		width: 134px
		height: 196px
		border-radius: 4px
		box-shadow: 0px 0px 10px
		cursor: pointer
		transition: opacity .50s ease
		opacity: 0

		.cover-overlay
			//background: rgba(45, 117, 223, 0.61);
			background rgba(23, 24, 27, 0.6)
			text-align center
			padding 88px 0
			width 100%
			height 100%
			border-radius 4px
			transition opacity .25s ease
			opacity 0
			
			&:hover
				opacity: 1

			.actions-favorites
				height: 20px
				width: 20px
				float: right
				background-repeat: no-repeat
				background-position: center
				margin-top: -80px
				margin-right: 7px
				fadeicon(favourites, 0px, -38px, 18px)

				&.selected
					fadeicon(favourites, -57px, 0px, 18px)



	.title
		height: 14px;
		margin: 6px 0 4px;
		color: #fff
		max-width: 134px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap

	.year
		font-size: 0.85em
		color: #5b5b5b
		display: inline

	.seasons
		font-size: 0.85em
		color: #5b5b5b
		display: inline
		float: right


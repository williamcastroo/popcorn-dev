#player .app-overlay
	z-index 20

.app-overlay
	position absolute
	z-index 2
	width 100%
	height 100%
	background-color rgba(0,0,0,0.95)

.tooltip-inner
	max-width 200px
	padding 3px 8px
	color #fff
	text-align center
	text-decoration none
	background-color rgba(9, 13, 18, 0.75)
	border-radius 4px

.movie-detail
	z-index 10
	width 100%
	height calc(100% - 65px)
	position absolute
	-webkit-user-select none
	opacity 1
	overflow hidden
	margin auto
	left 0
	right 0
	top 65px
	-webkit-backface-visibility hidden

.movie-data
	display table
	height 100%
	position relative
	max-width 62%

.movie-cover-image
	opacity 0
	float left
	width auto
	height 100%
	border-radius 4px
	margin-right 20px
	-webkit-backface-visibility hidden

.movie-meta-title
	color #fff
	font-size 38px
	font-family 'Open Sans Semibold'
	-webkit-font-smoothing antialiased
	-webkit-backface-visibility hidden
	
.movie-quick-info
	height 20px
	margin 12px 0px
	padding-left 3px
	
	div
		display inline-block
		-webkit-backface-visibility hidden
		
	.movie-meta-details
		color #fff
		font-size 12px
		font-family 'Open Sans Bold'
		-webkit-font-smoothing antialiased

	.movie-imdb-link
		margin-bottom: -4px
		width 27px
		height 16px
		position relative
		cursor pointer
		background url(../images/icons/imdb.png) no-repeat

	.movie-dot
		margin 0 15px 2px 15px
		position relative
		display inline-block
		width 4px
		height 4px
		border-radius 2px
		background-color #dbdbdd
		
	.star-container
		width 80px
		height 16px
		
	.health-icon
		position absolute
		width 14px
		height 17px
		right 0
		background-image url('../images/icons/health.png')
		background-repeat no-repeat
		&.Bad
			background-position 0px 0px
		&.Medium
			background-position -14px 0px
		&.Good
			background-position -28px 0px
		&.Excellent
			background-position -42px 0px

.movie-overview-container
	.movie-meta-overview
		color #fff
		font-family 'Open Sans Semibold'
		-webkit-font-smoothing antialiased
		font-size 14px
		line-height 24px
		-webkit-backface-visibility hidden

.movie-bottom
	display table-footer-group
	
	.movie-buttons
		position relative
		height 50px
		padding 15px 0
		color #fff
		font-size 14px
		line-height 24px
		font-family 'Open Sans Semibold'
		-webkit-font-smoothing antialiased

		.detail-favourites
			display inline;
			cursor pointer;
			padding-left 24px;
			fadeicon(favourites, 0px, -38px, 18px)

			&.selected
				fadeicon(favourites, -57px, 0px, 18px)
				
			
					
.movie-detail-close
	top 15px
	right 15px
	position absolute
	float right
	width 20px
	height 20px
	background-image url('../images/icons/Close.png')
	background-size 20px
	cursor pointer
	z-index 100
	opacity 0.7
	-webkit-backface-visibility hidden
	transition all .5s
	&:hover
		opacity 1 
		transition all .5s

.rating-star
	z-index 2
	padding-right: 12px
	position relative
	display: inline-block
	width 11px
	height 11px
	opacity 1
	background-image url('../images/icons/stars.png')
	background-repeat no-repeat
	-webkit-backface-visibility hidden
	
	&.null
		background-position: 0px 0px;
	&.half
		background-position: -11px 0px;
	&.full
		background-position: -22px 0px;

.movie-quality-container
	padding-left: 10%
	top: 13px
	z-index: 2
	float: left
	width: 10px
	height: 10px
	position: relative

.movie-controls-container
	height: 35px;
	position: relative;

.movie-btn
	z-index 2
	margin-right 15px
	position relative
	cursor pointer
	float left
	height 35px
	border-radius 3px
	background-clip padding-box
	background-color #1F375F
	padding 0 15px
	transition background-color .5s
	&:hover
		background #225694
		text-decoration none

	&:active
		box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6)
		background: #2875e5
		border: solid 1px #2468cc

	.movie-watch-now
		color #fff
		font-family "Open Sans Semibold", "Open Sans", sans-serif
		-webkit-font-smoothing antialiased
		text-align center
		padding-top 12px
		font-size 12px

.detail-window
	width 100%
	height 100%
	padding 75px 7%
	
.movie-backdrop
	width 100%
	height 100%
	position absolute
	top 0px
	z-index 0
	background-repeat no-repeat
	background-position center
	background-size cover
	overflow hidden
	opacity 1
	-webkit-backface-visibility hidden
	display none

.movie-backdrop-overlay
	width 100%
	height 100%
	position absolute
	top 0px
	opacity 0.7
	/* layer alpha */
	background-color #000
	/* layer fill content */
	z-index: 2

.q720
	z-index 2
	font-family "Open Sans Bold", "Open Sans", sans-serif
	-webkit-font-smoothing antialiased
	font-size 11px
	color #fff
	font-weight normal
	position absolute

.q1080
	font-family "Open Sans Bold", "Open Sans", sans-serif
	-webkit-font-smoothing antialiased
	font-size 11px
	color #fff
	font-weight normal
	margin-left 50px
	position absolute
	z-index 2

.switch
	background transparent
	border-radius 32px
	display block
	height 12px
	position absolute
	margin-left 21px
	//top 312px
	width 25px
	border 2px solid #FFF
	cursor pointer
	z-index 2
	
	label
		font-family "Open Sans", sans-serif
		font-size 11px
		color #fff
		font-weight bold
		transition color 0.2s ease
		transition color 0.2s ease
		width 20px
		cursor pointer
		
		&:nth-of-type(1)
			left -38px
			position absolute
			text-align right
			
		&:nth-of-type(2)
			position absolute
			right -30px
			text-align left
	input
		height 7px
		left -27px
		opacity 0
		position absolute
		top -4px
		width 79px
		z-index 2
		cursor pointer
		
		&:checked
			z-index 0
			
			& ~ label
			
				&:nth-of-type(1)
					color #286dc4
					
				&:nth-of-type(2)
					color #FFF
					
			& ~ .toggle
				left 0px
				
		& ~ :checked
		
			& ~ label
			
				&:nth-of-type(1)
					color #FFF
					
				&:nth-of-type(2)
					color #286dc4
					
			& ~ .toggle
				left 11px

.toggle
	transition left 0.2s ease
	transition left 0.2s ease
	background #286dc4
	border-radius 50%
	height 10px
	left -0px
	position absolute
	top -1px
	width 10px
	z-index 1

.sub-dropdown
	top: 15px
	right: 0
	position: absolute
	height: 26px
	color: #fff
	font-family: 'Open Sans Semibold'
	-webkit-font-smoothing: antialiased
	font-size: 12px
	line-height: 18px
	cursor pointer
	padding: 5px;
	padding-right: 13px;
		
	&.open
		background-color: rgba(45,117,223,0.4);
		-webkit-border-radius: 5px;
		border-radius: 5px 5px 0 0;
		
		.sub-dropdown-arrow
			border-bottom 5px solid #c4c6c8
			border-top none

	.sub-dropdown-arrow
		width 0
		height 0
		border-left 4px solid transparent
		border-right 4px solid transparent
		top: 10px
		position: absolute
		float left
		right 5px
		border-top 5px solid #c4c6c8
		border-bottom none

